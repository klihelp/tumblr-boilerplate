# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs
# editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = tab
tab_width = 2
indent_size = 2
trim_trailing_whitespace = true

[*.{diff,md}]
trim_trailing_whitespace = false

[*.{json,yml}]
indent_size = 2
indent_style = space
